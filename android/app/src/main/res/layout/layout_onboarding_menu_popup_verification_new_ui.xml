<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1B1B1C">


    <TextView
        android:id="@+id/tv_content_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="4"
        android:minHeight="20dp"
        android:paddingHorizontal="@dimen/text_6"
        android:paddingVertical="8dp"
        android:text="It is important to verify your profile for your score to be counted"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/text_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_text_2"/>

    <TextView
        android:id="@+id/tv_content_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingHorizontal="@dimen/text_container_padding_h2"
        android:paddingVertical="8dp"
        android:text="Swipe right to verify"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>