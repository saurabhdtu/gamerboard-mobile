<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/floating_layout_width"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/bg_dark_2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_lb_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_lb_avatar"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@android:color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lb_rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:text="00"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/text_3" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingEnd="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Player namffgfgfgfgfgffgfgfgfgfgfgfge"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_4" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_games_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_rank_pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_kill_pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_total_pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lb_pts_behind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1.5dp" />
</androidx.appcompat.widget.LinearLayoutCompat>