<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="end"
    android:gravity="end"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_height="@dimen/floating_logo_size"
        android:background="@drawable/bg_oval_bubble">

        <TextView
            android:id="@+id/profile_not_verified_bubble"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/floating_logo_size"
            android:layout_gravity="center"
            android:lines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:text="@string/profile_not_verified"
            android:textColor="@color/unverified"
            android:textSize="@dimen/text_5" />
    </FrameLayout>

</RelativeLayout>