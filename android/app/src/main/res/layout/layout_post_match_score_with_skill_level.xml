<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_380sdp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <include
            android:id="@+id/incl_post_match_skill_change"
            layout="@layout/layout_post_match_skill_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/post_match_summary"
            layout="@layout/layout_scores_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/bg_dark_2"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:background="@color/bg_dark_2"
            android:fontFamily="@font/gantari"
            android:padding="@dimen/text_container_padding_h1"
            android:text="@string/close"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_4"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>